@inherits BlazoredMenuBase
@using DevExpress.Blazor.AnchorUtils

@if (ChildContent != null)
{
	<nav role="navigation" class="blazored-menu-container @Css">
		<ul class="blazored-menu">
			@ChildContent
		</ul>
	</nav>
}
else
{
	<nav role="navigation" class="blazored-menu-container @Css">
		<ul class="blazored-menu">
			@foreach (var item in MenuBuilder.Build())
			{
				@if (item.MenuItems != null && item.IsVisible)
				{
					<BlazoredSubMenu Link="@item.Link" Header="@item.Title" IsEnabled="@item.IsEnabled" MenuItems="@item.MenuItems" MatchLink="@item.MatchLink" />
				}
				else if (item.IsVisible)
				{
					<BlazoredMenuItem MenuItem="@item" IsEnabled="@item.IsEnabled" />
				}
			}
		</ul>
	</nav>
}
<AnchorUtilsComponent />