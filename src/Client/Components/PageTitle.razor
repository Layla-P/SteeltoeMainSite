@inject IJSRuntime JSRuntime

@code {
	[Parameter]
	public string Title {get;set;}

	protected override async Task OnParametersSetAsync() {
		string title = !string.IsNullOrEmpty(Title) ? "Steeltoe - " + Title : "Steeltoe";
		await JSRuntime.InvokeAsync<string>("setPageTitle", title);
		StateHasChanged();
	}
}