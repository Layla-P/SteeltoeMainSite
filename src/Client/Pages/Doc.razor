<Docs Area="@(Area)" Component="@(Component)" />
@code {
	private string _area;
	private string _component;

	[Parameter]
	public string Area {
		get {
			if (string.IsNullOrEmpty(_area)) {
				return "overview";
			} else {
				return _area;
			}
		}
		set { _area = value; }
	}

	[Parameter]
	public string Component {
		get {
			if (!string.IsNullOrEmpty(_component))
				return _component.Replace("steeltoe-", "");

			return null;
		}
		set { _component = value; }
	}
}