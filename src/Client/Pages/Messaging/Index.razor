			}),
			Img = "/images/Icon_cloud.svg"
		},
		new Feature() {
			Title = (MarkupString)"Event Driven Architectures",
			Description = (b => {
				b.AddMarkupContent(1,"xxxxxxx");
			}),
			Img = "/images/Icon_data-transfer.svg"
		}
	};
}